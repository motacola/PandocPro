{
  "name": "docx-md-sync",
  "version": "1.0.0",
  "description": "User-friendly Word â†” Markdown sync tool",
  "private": true,
  "scripts": {
    "lint": "bash scripts/lint.sh && npm run lint --prefix gui",
    "test": "npm run test:ui && bash scripts/smoke.sh",
    "test:ui": "node --test ui-server/server.test.js",
    "ci": "npm run lint && npm test",
    "dev:all": "bash scripts/dev-all.sh",
    "watch": "node watch-md.js",
    "export": "node watch-md.js --once",
    "menu": "./scripts/menu.sh",
    "setup": "./scripts/setup-alias.sh",
    "ui": "node ui-server/server.js",
    "ui:dev": "node ui-server/dev-server.js",
    "gui:dev": "npm run dev --prefix gui",
    "gui:build": "npm run build --prefix gui",
    "gui:package": "npm run build --prefix gui && open gui/release"
  },
  "keywords": [
    "word",
    "markdown",
    "pandoc",
    "sync"
  ],
  "dependencies": {
    "chokidar": "^3.6.0"
  }
}
